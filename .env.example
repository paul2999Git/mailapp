# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database (PostgreSQL on VPS - replace with your VPS IP/hostname)
DATABASE_URL=postgresql://mailhub:your_password@YOUR_VPS_IP:5432/mailhub?schema=public

# Redis (for job queues)
REDIS_URL=redis://localhost:6379

# Encryption key for stored credentials (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d

# OAuth - Gmail
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# OAuth - Zoho
ZOHO_CLIENT_ID=
ZOHO_CLIENT_SECRET=
ZOHO_REDIRECT_URI=http://localhost:3001/api/auth/zoho/callback

# AI Providers
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Default AI provider (gemini, claude, or openai)
DEFAULT_AI_PROVIDER=gemini

# Default body preview character limit for AI classification
DEFAULT_BODY_PREVIEW_CHARS=500
